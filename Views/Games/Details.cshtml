@model RSOD.Models.Game

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Photo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Photo)
        </dd>
        <input type="hidden" name="Photo" value="@Model.Photo" />
        @if (!string.IsNullOrEmpty(Model.Photo))
        {
            <img class="mt-4 mb-4" width="200"
                 src="@Model.Photo">
        }
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MetacriticPro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MetacriticPro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MetacriticUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MetacriticUser)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StopGame)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StopGame)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Collection)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Collection.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatedData)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatedData)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
